<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
    <ImageView
        android:id="@+id/comment_reply_portrait"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/portrait_mode"/>
    <TextView
        android:id="@+id/comment_reply_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_toRightOf="@id/comment_reply_portrait"
        android:text="陈军权" />
    <TextView
        android:id="@+id/comment_reply_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/goods_comment_id"/>
    <TextView
        android:id="@+id/comment_reply_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/comment_reply_number" />
    <TextView
        android:id="@+id/comment_reply_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_reply_portrait"/>
    <TextView
        android:id="@+id/comment_reply_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_reply_content"/>


</RelativeLayout>