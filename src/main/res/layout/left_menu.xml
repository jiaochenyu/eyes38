<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:background="#f2f2f2"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    <!--显示有货商品一栏-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5">

        <CheckBox
            android:id="@+id/search_by_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:button="@null"
            android:drawableLeft="@drawable/cart_checkbox"
            android:padding="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center"
            android:text="仅显示有货商品"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f2f2f2"
        android:text=""/>
    <!--分类-->
    <LinearLayout
        android:id="@+id/search_fenlei"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
           android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:text="全部分类"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f2f2f2"
        android:text=""/>
    <!--全部类目-->
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">
        <include
            layout="@layout/user_search_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f2f2f2"
        android:text=""/>
    <!--品牌-->
    <LinearLayout
        android:id="@+id/search_pinpai"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="菜系"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f2f2f2"
        android:text=""/>
    <!--全部类目-->
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">
        <include
            layout="@layout/user_search_pinpai"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f2f2f2"
        android:text=""/>
    <!--价格区间-->
    <LinearLayout
        android:id="@+id/search_qujian"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="价格区间(元)"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <EditText
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@color/topical"
            android:hint="最低价"
            android:textColorHint="#F2F2F2"
            android:gravity="center"
            android:id="@+id/search_by_low"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
         />
        <TextView
            android:textColor="@color/white"
            android:text="___"
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <EditText
            android:textSize="12sp"
            android:textColorHint="#F2F2F2"
            android:background="@color/topical"
            android:textColor="@color/white"
            android:hint="最高价"
            android:gravity="center"
            android:id="@+id/search_by_high"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f2f2f2"
        android:text=""/>
    <!--按钮一栏-->
        <LinearLayout
            android:layout_weight="14"
            android:layout_width="match_parent"
            android:layout_height="0dp"></LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <Button
            android:textColor="@color/white"
            android:id="@+id/search_window_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/topical"
            android:text="取消"
           />
        <TextView
            android:text=""
            android:layout_weight="0.05"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:textColor="@color/white"
            android:id="@+id/search_window_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/topical"
            android:text="确定"
           />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>