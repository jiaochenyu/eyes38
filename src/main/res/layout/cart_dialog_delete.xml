<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/sort_title_background"
    >

    <RelativeLayout
       android:layout_centerInParent="true"
        android:id="@+id/dialog_content"
        android:layout_width="240dp"
        android:layout_height="100dp"
        >

        <TextView
            android:id="@+id/dialog_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:padding="3dp"
            android:text="确定要删除吗"/>

        <LinearLayout
            android:id="@+id/cart_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_text"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/dialog_no"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@+id/dialog_text"
                android:layout_centerInParent="true"
                android:background="@drawable/cart_delete_dialog_no"
                android:gravity="center"
                android:text="取消"/>

            <TextView
                android:id="@+id/dialog_yes"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/dialog_no"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/dialog_no"
                android:background="@drawable/cart_delete_dialog_yes"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="确认"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>