<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/cart_item_bottom_border"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp">

    <CheckBox
        android:id="@+id/allGoodsCheckboxTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:button="@null"
        android:drawableRight="@drawable/cart_checkbox"
        />

    <TextView
        android:id="@+id/checkedCountTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/allGoodsCheckboxTop"
        android:text="0"
        />

    <TextView
        android:id="@+id/checkedDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/checkedCountTop"
        android:text="件商品(暂无包邮优惠)"/>

    <TextView
        android:id="@+id/DeleteOperationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:text="编辑"/>
</RelativeLayout>