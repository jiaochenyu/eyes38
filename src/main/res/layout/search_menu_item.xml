<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/sort_sort_item_imageview"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:gravity="bottom|left"
        android:id="@+id/sort_sort_item_nametextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sort_sort_item_imageview"
        android:text="苹果" />

    <TextView
        android:layout_marginBottom="0dp"
        android:id="@+id/sort_sort_item_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/goods_detail_addcar"
        android:textSize="18sp"
        android:layout_below="@id/sort_sort_item_nametextview"
        android:text="￥" />

    <TextView
        android:layout_marginBottom="0dp"
        android:id="@+id/sort_sort_item_pricetextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/goods_detail_addcar"
        android:layout_below="@id/sort_sort_item_nametextview"
        android:layout_toRightOf="@id/sort_sort_item_remark"
        android:textSize="18sp"
        android:text="3.4" />

    <TextView
        android:layout_marginBottom="0dp"
        android:id="@+id/sort_sort_item_unittextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="bottom|right"
        android:layout_below="@id/sort_sort_item_nametextview"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="3.4/500g" />

</RelativeLayout>