<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/sort_sort_item_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/defult"/>


    <ImageView
        android:id="@+id/sort_sort_item_carimageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/sort_sort_item_imageview"
        android:layout_marginRight="5dp"
        android:src="@drawable/ion_cart_on"/>


    <TextView
        android:id="@+id/sort_sort_item_nametextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sort_sort_item_imageview"
        android:text="苹果"/>

    <TextView
        android:id="@+id/sort_sort_item_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sort_sort_item_nametextview"
        android:text="￥"
        android:textColor="@color/goods_detail_addcar"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/sort_sort_item_pricetextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sort_sort_item_nametextview"
        android:layout_toRightOf="@id/sort_sort_item_remark"
        android:text="3.4"
        android:textColor="@color/goods_detail_addcar"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/sort_sort_item_unittextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/sort_sort_item_carimageview"
        android:text="3.4/500g"/>

</RelativeLayout>