<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.eyes38.user_activity.User_orderActivity">

    <!-- 内容 -->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/usercontent"
        style="@style/pagecontent">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    <ImageView
        android:padding="5dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:src="@drawable/user_login_wrong"
        android:id="@+id/user_login_wrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1.12"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </LinearLayout>
        <LinearLayout
            android:layout_weight="2.33"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <ImageView
            android:src="@drawable/logos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--分割线-->
        <TextView
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45"
            android:text=""
            android:textSize="0.1sp"/>
        <!--登录账号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.12"
            android:background="#FFF">
          <ImageView
              android:padding="5dp"
              android:src="@drawable/user_login_photo"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"/>
            <EditText
                android:background="#faffbd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="0dp"
                android:layout_weight="8"
                android:gravity="center|left"
                android:text="15538299972"
                android:textSize="15sp"/>
            <TextView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <!--分割线-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:text=""
            android:textSize="0.1sp"/>
        <!--登录账号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.12"
            android:background="#FFF">
            <ImageView
                android:padding="5dp"
                android:src="@drawable/user_login_suo"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:background="#faffbd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="0dp"
                android:layout_weight="8"
                android:gravity="center|left"
                android:text="···············"
                android:textSize="15sp"/>
            <TextView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <TextView
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/back_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="#E6831E"
                android:text="登录"
                android:textColor="#fff"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <LinearLayout
            android:layout_weight="1.12"
            android:layout_width="match_parent"
            android:layout_height="0dp">
          <TextView
              android:layout_weight="7"
              android:layout_width="0dp"
              android:layout_height="match_parent"/>
            <TextView
                android:textSize="12sp"
                android:background="#fff"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="忘记密码?"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:background="#FFF"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <LinearLayout
            android:layout_weight="1.12"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center|right"
                android:textSize="12sp"
                android:text="还没有账号?"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_weight="0.05"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:gravity="center"
                android:textColor="@color/topical"
                android:textSize="12sp"
                android:background="@drawable/user_login_border"
                android:text="手机注册"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="4.22"
            android:layout_width="match_parent"
            android:layout_height="0dp"></LinearLayout>
    </LinearLayout>

</LinearLayout>
