<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.eyes38.user_activity.User_orderActivity">
    <!--设置主体内容-->

    <FrameLayout
        android:id="@+id/user_order_pay_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="28">
        <!--空白时的页面-->
        <LinearLayout
            android:id="@+id/user_order_pay_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <!--上部分空白-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:gravity="center">

                <ImageView
                    android:id="@+id/user_getmesssage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/notice"/>
            </LinearLayout>
            <!--下部分空白-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
            </LinearLayout>
            <!--文字部分-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="不存在任何待付款的订单。"
                    android:textSize="12sp"/>
            </LinearLayout>
            <!--下部分空白-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15">
            </LinearLayout>
        </LinearLayout>
        <!--有内容时的部分-->
        <LinearLayout
            android:id="@+id/user_order_pay_footer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <in.srain.cube.views.ptr.PtrClassicFrameLayout
                android:id="@+id/user_order_pay_ptr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                cube_ptr:ptr_duration_to_close="300"
                cube_ptr:ptr_duration_to_close_header="2000"
                cube_ptr:ptr_keep_header_when_refresh="true"
                cube_ptr:ptr_pull_to_fresh="false"
                cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
                cube_ptr:ptr_resistance="1.7">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/user_order_pay_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            </in.srain.cube.views.ptr.PtrClassicFrameLayout>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>


