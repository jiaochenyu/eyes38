<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F0F0F0"
              android:orientation="vertical"
    >
    <!--顶部标题-->
    <!--顶部标题-->
    <RelativeLayout
        android:id="@+id/usertitle"
        style="@style/pagetitle">
        <ImageView
            android:id="@+id/pay_select_activity_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/sort_sort_title"
            style="@style/pagetitletext"
            android:text="@string/option_address" />

    </RelativeLayout>
    <!-- 内容 -->


    <android.support.v7.widget.RecyclerView
        android:id="@+id/select_pay_adress_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="28">
    </android.support.v7.widget.RecyclerView>


    <TextView
        android:id="@+id/pay_newaddress"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:background="@color/topical"
        android:gravity="center"
        android:text="新建收货地址"
        android:textColor="@color/white"
        />


</LinearLayout>