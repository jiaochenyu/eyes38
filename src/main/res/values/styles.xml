<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- <item name="colorPrimaryDark">@color/topical</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--基本样式-->
    <style name="ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bottom_radiogroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="bottom_radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/bottom_text_selector</item>
    </style>
    <!--首页四个分类-->
    <style name="home_sort_radiogroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="home_sort_radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
    </style>
    <!-- 顶部标题 -->
    <style name="pagetitle">
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/topical</item>
    </style>
    <!-- 顶部标题 文字 -->
    <style name="pagetitletext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- scrollview 样式-->
    <style name="pagecontent">
        <item name="android:layout_weight">28</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--分类界面导航栏属性-->
    <style name="sort_menu_radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/bottom_text_selector</item>
        <item name="android:background">@drawable/user_selector_line</item>
    </style>

    <style name="home_sort_imagebutton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--商品详情底部-->
    <style name="goods_detail_bottom">
        <item name="android:layout_weight">2.5</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--商品详情规格字体属性-->
    <style name="goods_detail_unit_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/goods_detail_addcar</item>
    </style>
    <!--商品详情备注字体属性-->
    <style name="goods_detail_remark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--商品详情界面 购买区域radiogroup属性-->
    <style name="goods_detail_raio_consult">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:text">咨询</item>
        <item name="android:button">@null</item>
    </style>

    <style name="goods_detail_radio_car">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:text">购物车</item>
        <item name="android:button">@null</item>
    </style>

    <style name="goods_detail_radio_buynow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center</item>
        <item name="android:text">立即购买</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:button">@null</item>
        <item name="android:background">@color/goods_detail_buynow</item>
    </style>

    <style name="goods_detail_radio_addcar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center</item>
        <item name="android:text">加入购物车</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:button">@null</item>
        <item name="android:background">@color/goods_detail_addcar</item>

    </style>
    <!--user radiobutton-->
    <style name="user_radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/user_text_selector</item>
    </style>
    <!--个人中心设置第一条分割线-->
    <style name="user_person_center_line">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:background">#f2f2f2</item>
    </style>
    <!--个人中心外部Linear-->
    <style name="user_person_center_linear">
        <item name="android:background">#FFF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2.45</item>
    </style>
    <!--个人中心左侧第一行文字-->
    <style name="user_person_center_text1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_weight">8</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--个人中心左侧第二行文字-->
    <style name="user_person_center_text2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_weight">18</item>
        <item name="android:gravity">center|right</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--个人中心左侧第三行文字-->
    <style name="user_person_center_text3">
        <item name="android:layout_weight">3</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--个人中心左侧分割线2-->
    <style name="user_person_center_line2">
        <item name="android:background">#f2f2f2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:textSize">0.1sp</item>
    </style>
    <!--我的订单radio-->
    <style name="order_bottom_radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/bottom_text_selector</item>
        <item name="android:background">@drawable/user_selector_line</item>
    </style>
    <!--我的搜索radio-->
    <style name="search_bottom_radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/bottom_text_selector</item>
    </style>
    <!--我的分类搜索-->
    <style name="search2_bottom_radio">
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#F2F2F2</item>
        <item name="android:background">@drawable/search_background</item>
    </style>
    <!--新建收货地址-->
    <style name="addaddress_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2.45</item>
        <item name="android:background">#FFF</item>
    </style>
    <!--新建收货地址text1-->
    <style name="addaddress_text1">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--新建收货地址text2-->
    <style name="addaddress_text2">
        <item name="android:background">@drawable/edittext</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_weight">8</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--新建收货地址editText-->
    <style name="addaddress_edit">
        <item name="android:background">@drawable/edittext</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_weight">20</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- 购物车的删除的 Dialog -->
    <style name="Cart_Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="comment_ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/comment_ratingbar</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <!--评论界面导航栏属性-->
    <style name="comment_menu_radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/bottom_text_selector</item>
        <item name="android:background">@drawable/user_selector_line</item>
    </style>

    <style name="cart_dialog_select_day_text">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/topical</item>
        <item name="android:background">@drawable/cart_dialog_week_border</item>
    </style>
    <!--图片上传-->
    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/user_photo_choose_bg</item>
    </style>
    <!-- 我的账号设置里的dialog进出动画 -->
    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/user_photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/user_photo_dialog_out_anim</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
