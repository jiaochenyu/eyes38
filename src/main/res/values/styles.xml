<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- <item name="colorPrimaryDark">@color/topical</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--基本样式-->
    <style name="ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bottom_radiogroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="bottom_radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/bottom_text_selector</item>
    </style>
    <!-- 顶部标题 -->
    <style name="pagetitle">
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/topical</item>
    </style>
    <!-- 顶部标题 文字 -->
    <style name="pagetitletext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- scrollview 样式-->
    <style name="pagecontent">
        <item name="android:layout_weight">28</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--user radiobutton-->
    <style name="user_radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/user_text_selector</item>
    </style>
    <!--个人中心设置第一条分割线-->
    <style name="user_person_center_line">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:background">#f2f2f2</item>
    </style>
    <!--个人中心外部Linear-->
    <style name="user_person_center_linear">
        <item name="android:background">#FFF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2.45</item>
    </style>
    <!--个人中心左侧第一行文字-->
    <style name="user_person_center_text1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_weight">8</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--个人中心左侧第二行文字-->
    <style name="user_person_center_text2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_weight">18</item>
        <item name="android:gravity">center|right</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--个人中心左侧第三行文字-->
    <style name="user_person_center_text3">
        <item name="android:layout_weight">3</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--个人中心左侧分割线2-->
    <style name="user_person_center_line2">
        <item name="android:background">#f2f2f2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:textSize">0.1sp</item>
    </style>
    <!--我的订单radio-->
    <style name="order_bottom_radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/bottom_text_selector</item>
        <item name="android:background">@drawable/user_selector_line</item>
    </style>
</resources>
